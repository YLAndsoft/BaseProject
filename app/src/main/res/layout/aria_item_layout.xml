<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp" >

        <RelativeLayout
            android:id="@+id/zzzzzzzzzpoint_rl_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/zzzzzzzzzpoint_iv_app_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/zzzzzzzzzpoint_iv_app_icon"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/zzzzzzzzzpoint_tv_app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="天天夺宝"
                    android:textColor="#333333"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:id="@+id/zzzzzzzzzpoint_tv_app_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.0M"
                        android:textColor="#c8c8c8"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_biaoqian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="变态版"
                        android:textSize="12sp"
                        android:textColor="@color/system_bar_color"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/zzzzzzzzzpoint_tv_appdescdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxWidth="190dp"
                    android:singleLine="true"
                    android:text="1234fdfgdgfdg"
                    android:textColor="#696969"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_below="@id/zzzzzzzzzpoint_iv_app_icon" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:clickable="false" >
            <ProgressBar
                android:id="@+id/zzzzzzzzzpoint_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:clickable="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/download_bg" />
            <TextView
                android:id="@+id/zzzzzzzzzpoint_btn_download"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="下载"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_selector"/>
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>